{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@diboas/ui/*": [
                "packages/ui/src/*"
            ],
            "@diboas/api-client/*": [
                "packages/api-client/src/*"
            ],
            "@diboas/services/*": [
                "packages/services/src/*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist",
        ".next"
    ]
}